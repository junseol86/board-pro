<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/form_border"
    >
    <android.support.constraint.ConstraintLayout
        android:id="@+id/editFormTop"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:background="@color/white_button_off"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
        <ko.hyeonmin.boardpro.viewExtension.WhiteButton
            android:id="@+id/editFormAddBtn"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:paddingRight="16dp"
            >
            <ImageView
                android:id="@+id/editFormAddImg"
                android:layout_width="44dp"
                android:layout_height="44dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:src="@drawable/cs_lb_rc_add"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/editFormAddImg"
                android:textColor="@color/text_color"
                android:textSize="15sp"
                android:text="항목 추가"
                />
        </ko.hyeonmin.boardpro.viewExtension.WhiteButton>
        <ko.hyeonmin.boardpro.viewExtension.WhiteButton
            android:id="@+id/editFormSaveBtn"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingRight="16dp"
            >
            <ImageView
                android:id="@+id/editFormSaveImg"
                android:layout_width="44dp"
                android:layout_height="44dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/cs_lb_save"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/editFormSaveImg"
                android:textColor="@color/text_color"
                android:textSize="15sp"
                android:text="다른 제목으로 복사"
                />
        </ko.hyeonmin.boardpro.viewExtension.WhiteButton>
    </android.support.constraint.ConstraintLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/editFormRV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/form_button_off"
        app:layout_constraintTop_toBottomOf="@id/editFormTop"
        app:layout_constraintBottom_toTopOf="@id/editFormBottom"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="1dp"
        />
    <android.support.constraint.ConstraintLayout
        android:id="@+id/editFormBottom"
        android:layout_width="0dp"
        android:layout_height="44dp"
        app:layout_constraintTop_toBottomOf="@id/editFormRV"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="1dp"
        >
        <ko.hyeonmin.boardpro.viewExtension.WhiteButton
            android:id="@+id/editFormFolderName"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/editFormFileName"
            android:layout_marginRight="1dp"
            android:paddingLeft="14dp"
            android:paddingRight="2dp"
            >
            <TextView
                android:id="@+id/editFormFolderNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textColor="@color/text_color"
                android:textSize="15sp"
                android:text="폴더명:"
                />
            <ImageView
                android:layout_width="22dp"
                android:layout_height="44dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:src="@drawable/arrowdown_wbg"
                />
        </ko.hyeonmin.boardpro.viewExtension.WhiteButton>
        <ko.hyeonmin.boardpro.viewExtension.WhiteButton
            android:id="@+id/editFormFileName"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/editFormFolderName"
            android:paddingLeft="14dp"
            android:paddingRight="2dp"
            >
            <TextView
                android:id="@+id/editFormFileNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textColor="@color/text_color"
                android:textSize="15sp"
                android:text="파일명:"
                />
            <ImageView
                android:layout_width="22dp"
                android:layout_height="44dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:src="@drawable/arrowdown_wbg"
                />
        </ko.hyeonmin.boardpro.viewExtension.WhiteButton>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>