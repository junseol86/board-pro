<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <CalendarView
        android:id="@+id/popupSelDateCalendar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/popupSelDateCL"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
    </CalendarView>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/popupSelDateCL"
        android:layout_width="0dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@id/popupSelDateCalendar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingTop="2px"
        android:paddingBottom="2px"
        android:background="@color/form_border"
        >
        <ko.hyeonmin.boardpro.viewExtension.FormRCButton
            android:id="@+id/popupSelDateFormDate"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/popupSelDateFormTime"
            android:paddingLeft="14dp"
            android:paddingRight="2dp"
            >
            <TextView
                android:id="@+id/popupSelDateFormDateTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textColor="@color/text_color"
                android:textSize="15sp"
                />
            <ImageView
                android:layout_width="22dp"
                android:layout_height="44dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:src="@drawable/arrowdown_wbg"
                />
        </ko.hyeonmin.boardpro.viewExtension.FormRCButton>
        <ko.hyeonmin.boardpro.viewExtension.FormRCButton
            android:id="@+id/popupSelDateFormTime"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/popupSelDateFormDate"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingLeft="14dp"
            android:paddingRight="2dp"
            >
            <TextView
                android:id="@+id/popupSelDateFormTimeTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textColor="@color/text_color"
                android:textSize="15sp"
                />
            <ImageView
                android:layout_width="22dp"
                android:layout_height="44dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:src="@drawable/arrowdown_wbg"
                />
        </ko.hyeonmin.boardpro.viewExtension.FormRCButton>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>