<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextureView
        android:id="@+id/textureView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <ko.hyeonmin.boardpro.viewExtension.CameraCanvas
        android:id="@+id/cameraCanvas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <android.support.constraint.ConstraintLayout
        android:layout_width="44dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#33000000"
        >
        <ImageView
            android:id="@+id/cmrFlash"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/cmr_flash"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/cmrPicSize"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <ImageView
            android:id="@+id/cmrPicSize"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/cmr_pic_size"
            app:layout_constraintTop_toBottomOf="@id/cmrFlash"
            app:layout_constraintBottom_toTopOf="@id/cmrBoardSize"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <ImageView
            android:id="@+id/cmrBoardSize"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/cmr_board_size"
            app:layout_constraintTop_toBottomOf="@id/cmrPicSize"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>