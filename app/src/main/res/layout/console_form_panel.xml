<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/formPanel"
    android:layout_width="0dp"
    android:layout_height="320dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:background="@color/form_border"
    >
    <android.support.constraint.ConstraintLayout
        android:id="@+id/formPanelTop"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:background="@color/form_border"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="@id/formPanelContent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
        <ko.hyeonmin.boardpro.viewExtension.WhiteButton
            android:id="@+id/selectForm"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/saveForm"
            android:layout_marginRight="1dp"
            >
            <ImageView
                android:id="@+id/selectFormIcon"
                android:layout_width="44dp"
                android:layout_height="match_parent"
                android:src="@drawable/cs_lb_form"
                app:layout_constraintLeft_toLeftOf="parent"
                />
            <TextView
                android:id="@+id/currentFormTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/selectFormIcon"
                android:textColor="@color/text_color"
                android:textSize="15sp"
                />
            <ImageView
                android:layout_width="22dp"
                android:layout_height="match_parent"
                android:src="@drawable/arrowdown_wbg"
                app:layout_constraintRight_toRightOf="parent"
                />
        </ko.hyeonmin.boardpro.viewExtension.WhiteButton>
        <ko.hyeonmin.boardpro.viewExtension.WhiteButton
            android:id="@+id/saveForm"
            android:layout_width="44dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/selectForm"
            app:layout_constraintRight_toLeftOf="@id/editForm"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/cs_lb_save"
                />
        </ko.hyeonmin.boardpro.viewExtension.WhiteButton>
        <ko.hyeonmin.boardpro.viewExtension.WhiteButton
            android:id="@+id/editForm"
            android:layout_width="44dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/saveForm"
            app:layout_constraintRight_toRightOf="parent"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/cs_lb_edit"
                />
        </ko.hyeonmin.boardpro.viewExtension.WhiteButton>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/formPanelContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/formPanelTop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="1dp"
        >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/formRecyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>

