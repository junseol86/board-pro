<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/label_border"
    >
    <android.support.constraint.ConstraintLayout
        android:id="@+id/editLabelTop"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:background="@color/white_button_off"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
        <ko.hyeonmin.boardpro.viewExtension.WhiteButton
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:paddingRight="16dp"
            >
            <ImageView
                android:id="@+id/editLabelAddImg"
                android:layout_width="44dp"
                android:layout_height="44dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:src="@drawable/cs_lb_rc_add"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/editLabelAddImg"
                android:text="항목 추가"
                />
        </ko.hyeonmin.boardpro.viewExtension.WhiteButton>
        <ko.hyeonmin.boardpro.viewExtension.WhiteButton
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingRight="16dp"
            >
            <ImageView
                android:id="@+id/editLabelSaveImg"
                android:layout_width="44dp"
                android:layout_height="44dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/cs_lb_save"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/editLabelSaveImg"
                android:text="서식 저장"
                />
        </ko.hyeonmin.boardpro.viewExtension.WhiteButton>
    </android.support.constraint.ConstraintLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/editLabelRV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/editLabelTop"
        app:layout_constraintBottom_toTopOf="@id/editLabelBottom"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="1dp"
        />
    <android.support.constraint.ConstraintLayout
        android:id="@+id/editLabelBottom"
        android:layout_width="0dp"
        android:layout_height="44dp"
        app:layout_constraintTop_toBottomOf="@id/editLabelRV"
        app:layout_constraintBottom_toTopOf="@id/editLabelOkBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="1dp"
        >
        <ko.hyeonmin.boardpro.viewExtension.WhiteButton
            android:id="@+id/editLabelFolderName"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/editLabelFileName"
            android:layout_marginRight="1dp"
            android:paddingLeft="14dp"
            android:paddingRight="2dp"
            >
            <TextView
                android:id="@+id/editLabelFolderNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="폴더명:"
                />
            <ImageView
                android:layout_width="22dp"
                android:layout_height="44dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:src="@drawable/arrowdown_wbg"
                />
        </ko.hyeonmin.boardpro.viewExtension.WhiteButton>
        <ko.hyeonmin.boardpro.viewExtension.WhiteButton
            android:id="@+id/editLabelFileName"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/editLabelFolderName"
            android:paddingLeft="14dp"
            android:paddingRight="2dp"
            >
            <TextView
                android:id="@+id/editLabelFileNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="파일명:"
                />
            <ImageView
                android:layout_width="22dp"
                android:layout_height="44dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:src="@drawable/arrowdown_wbg"
                />
        </ko.hyeonmin.boardpro.viewExtension.WhiteButton>
    </android.support.constraint.ConstraintLayout>
    <ko.hyeonmin.boardpro.viewExtension.BlackButton
        android:id="@+id/editLabelOkBtn"
        android:layout_width="0dp"
        android:layout_height="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="17dp"
            android:textColor="@color/white"
            android:text="확인"
            />

    </ko.hyeonmin.boardpro.viewExtension.BlackButton>
</android.support.constraint.ConstraintLayout>